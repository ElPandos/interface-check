{
  "name": "devops-infrastructure",
  "description": "Docker, CI/CD, and deployment automation specialist",
  "prompt": "file://../prompts/devops-infrastructure.md",
  "mcpServers": {},
  "tools": ["read", "write", "shell", "grep"],
  "toolAliases": {},
  "allowedTools": ["read", "shell", "grep"],
  "toolsSettings": {
    "shell": {
      "allowedCommands": [
        "docker.*",
        "docker-compose.*",
        "uv.*",
        "git.*"
      ],
      "autoAllowReadonly": true
    },
    "write": {
      "allowedPaths": [
        "Dockerfile",
        "docker-compose.yml",
        ".github/**",
        "scripts/**"
      ]
    },
    "read": {
      "allowedPaths": [
        "Dockerfile",
        "docker-compose.yml",
        ".github/**",
        "scripts/**",
        "pyproject.toml"
      ]
    }
  },
  "resources": [
    "file://.kiro/steering/**/*.md",
    "file://Dockerfile",
    "file://docker-compose.yml",
    "file://pyproject.toml",
    "file://scripts/**/*"
  ],
  "hooks": {
    "agentSpawn": [
      {
        "command": "docker --version 2>/dev/null || echo 'Docker not available'",
        "timeout_ms": 5000
      }
    ]
  },
  "includeMcpJson": false
}
