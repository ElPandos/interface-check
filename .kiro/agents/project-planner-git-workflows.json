{
  "name": "project-planner-git-workflow",
  "description": "Specialized agent that are an expert on development workflow and handles Git integration for entire project",
  "prompt": "file://../prompts/agents/project-planner-git-workflows.md",
  "mcpServers": {
    "git": {
      "command": "git-mcp-server",
      "args": [],
      "timeout": 30000
    }
  },
  "tools": [
    "read",
    "write",
    "shell",
    "@git"
  ],
  "toolAliases": {
    "@git/git_status": "status",
    "@git/git_log": "log",
    "@git/git_diff": "diff"
  },
  "allowedTools": [
    "read",
    "@git/git_status",
    "@git/git_log",
    "@git/git_diff"
  ],
  "toolsSettings": {
    "write": {
      "allowedPaths": [
        "src/**",
        "tests/**",
        "docs/**",
        "*.md",
        "*.json",
        "package.json",
        "requirements.txt"
      ]
    }
  },
  "resources": [
    "file://.kiro/research/**/analyze/*.md",
    "file://docs/**/*.md",
    "file://README.md",
    "file://TODO.md",
    "file://src/**/*.*",
    "file://scripts/**/*.*",
    "file://requirements.txt",
    "file://pyproject.toml"
  ],
  "hooks": {
    "agentSpawn": [
      {
        "command": "git status --porcelain",
        "timeout_ms": 5000
      },
      {
        "command": "git branch --show-current",
        "timeout_ms": 3000
      }
    ]
  },
  "includeMcpJson": false
}
