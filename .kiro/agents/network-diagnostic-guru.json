{
  "name": "network-diagnostic-guru",
  "description": "SSH-based network interface diagnostics and monitoring specialist for Interface Check project",
  "prompt": "file://../prompts/network-diagnostic-guru.md",
  "mcpServers": {},
  "tools": ["read", "write", "shell", "grep", "glob"],
  "toolAliases": {},
  "allowedTools": ["read", "shell", "grep", "glob"],
  "toolsSettings": {
    "shell": {
      "allowedCommands": [
        "ssh.*",
        "ethtool.*",
        "mlxconfig.*",
        "mlxlink.*",
        "mst.*",
        "ping.*",
        "traceroute.*",
        "netstat.*",
        "ss.*"
      ],
      "autoAllowReadonly": true
    },
    "read": {
      "allowedPaths": [
        "src/core/connect/**",
        "src/platform/tools/**",
        "main_scan_cfg.json",
        "main_scan_traffic_cfg.json"
      ]
    }
  },
  "resources": [
    "file://.kiro/steering/**/*.md",
    "file://src/core/connect/**/*.py",
    "file://src/platform/tools/**/*.py",
    "file://docs/TRAFFIC_TESTING.md",
    "file://main_scan_cfg.json",
    "file://main_scan_traffic_cfg.json"
  ],
  "hooks": {
    "agentSpawn": [
      {
        "command": "find src/platform/tools -name '*.py' | head -5",
        "timeout_ms": 5000
      }
    ]
  },
  "includeMcpJson": false
}