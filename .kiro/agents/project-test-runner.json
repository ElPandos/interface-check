{
  "name": "project-test-runner",
  "description": "Automated test execution and coverage analysis specialist",
  "prompt": "file://../prompts/project-test-runner.md",
  "mcpServers": {},
  "tools": ["shell", "read", "write", "grep"],
  "toolAliases": {},
  "allowedTools": ["shell", "read", "grep"],
  "toolsSettings": {
    "shell": {
      "allowedCommands": [
        "uv run pytest.*",
        "uv run mypy.*",
        "uv run ruff.*",
        "cargo test.*",
        "npm test.*"
      ],
      "autoAllowReadonly": true
    },
    "read": {
      "allowedPaths": ["tests/**", "src/**", "pyproject.toml", "Cargo.toml"]
    }
  },
  "resources": [
    "file://.kiro/steering/**/*.md",
    "file://tests/**/*.py",
    "file://src/**/*.py",
    "file://pyproject.toml"
  ],
  "hooks": {
    "agentSpawn": [
      {
        "command": "find tests -name '*.py' | wc -l",
        "timeout_ms": 5000
      }
    ]
  },
  "includeMcpJson": false
}