{
  "name": "code-reviewer",
  "description": "Code quality analysis and review specialist with security focus",
  "prompt": "file://../prompts/code-reviewer.md",
  "mcpServers": {},
  "tools": ["read", "shell", "grep", "glob"],
  "toolAliases": {},
  "allowedTools": ["read", "shell", "grep", "glob"],
  "toolsSettings": {
    "shell": {
      "allowedCommands": [
        "uv run ruff check.*",
        "uv run mypy.*",
        "git diff.*",
        "git log.*",
        "find.*",
        "wc.*"
      ],
      "autoAllowReadonly": true
    },
    "read": {
      "allowedPaths": ["src/**", "tests/**", "*.py", "*.md", "pyproject.toml"]
    }
  },
  "resources": [
    "file://.kiro/steering/**/*.md",
    "file://src/**/*.py",
    "file://tests/**/*.py",
    "file://pyproject.toml",
    "file://README.md"
  ],
  "hooks": {
    "agentSpawn": [
      {
        "command": "git diff --name-only HEAD~1 | head -10",
        "timeout_ms": 5000
      }
    ]
  },
  "includeMcpJson": false
}