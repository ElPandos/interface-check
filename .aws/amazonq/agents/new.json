{
  "name": "Super DevOps & Code Intelligence Agent",
  "description": "An autonomous, secure, multi-language super agent specialized in AWS, Rust, Python, and CI/CD tasks with code cleaning, optimization, and automation capabilities.",
  "version": "3.0.0",

  "mcpServers": {
    "fetch": {
      "command": "fetch3.1",
      "args": []
    },
    "git": {
      "command": "git-mcp",
      "args": []
    },
    "lint": {
      "command": "lint-mcp",
      "args": ["--fix", "--report"]
    },
    "build": {
      "command": "cargo-mcp",
      "args": ["build", "--release"]
    }
  },

  "tools": [
    "fs_read",
    "fs_write",
    "execute_bash",
    "use_aws",
    "use_python",
    "analyze_code",
    "generate_docs",
    "@git",
    "@fetch/fetch_url",
    "@lint/run",
    "@build/compile"
  ],

  "toolAliases": {
    "@git/git_status": "status",
    "@git/git_commit": "commit",
    "@git/git_push": "push",
    "@fetch/fetch_url": "get",
    "@lint/run": "lint",
    "@build/compile": "build"
  },

  "allowedTools": [
    "fs_read",
    "fs_write",
    "execute_bash",
    "@git/git_status",
    "@lint/run",
    "@build/compile",
    "use_aws"
  ],

  "toolsSettings": {
    "fs_write": {
      "allowedPaths": ["src/**", "tests/**", "scripts/**", "docs/**"]
    },
    "use_aws": {
      "allowedServices": ["s3", "lambda", "cloudwatch", "dynamodb"]
    },
    "execute_bash": {
      "timeout": 30,
      "workingDir": "./"
    }
  },

  "resources": [
    "file://tasks.md",
    "file://docs/**/*.md",
    "file://src/**/*.rs",
    "file://src/**/*.py",
    "file://tests/**/*.rs",
    "file://tests/**/*.py"
  ],

  "hooks": {
    "agentSpawn": [
      {
        "command": "git status"
      },
      {
        "command": "cargo check"
      },
      {
        "command": "aws s3 ls"
      }
    ],
    "userPromptSubmit": [
      {
        "command": "ls -la"
      },
      {
        "command": "pytest --maxfail=1 --disable-warnings -q"
      },
      {
        "command": "ruff check ."
      }
    ],
    "codeUpdate": [
      {
        "command": "lint --fix"
      },
      {
        "command": "build"
      }
    ]
  },

  "logging": {
    "level": "INFO",
    "file": "logs/super_agent.log",
    "rotate": true,
    "maxSizeMB": 5,
    "keepFiles": 3
  },

  "security": {
    "sandboxMode": true,
    "networkAccess": ["github.com", "crates.io", "pypi.org", "aws.amazon.com"]
  },

  "capabilities": {
    "languages": ["Rust", "Python", "Bash"],
    "awsIntegration": true,
    "ciCdSupport": true,
    "autoFixWarnings": true,
    "autoOptimizeCode": true,
    "generateDocumentation": true
  },

  "useLegacyMcpJson": false,
  "model": "gpt-5"
}
