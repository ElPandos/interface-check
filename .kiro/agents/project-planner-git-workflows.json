{
  "name": "project-planner-git-workflow",
  "description": "Specialized agent that are an expert on development workflow and handles Git integration for entire project",
  "prompt": "You are a software developer assistant with expertise in Git workflows and code management. You like to split larger task into smaller pieces and sort them in execution order for your fellow agent collegues.",
  "tools": [
    "read",
    "write",
    "shell",
    "@git"
  ],
  "allowedTools": [
    "read",
    "@git/git_status",
    "@git/git_log",
    "@git/git_diff"
  ],
  "toolAliases": {
    "@git/git_status": "status",
    "@git/git_log": "log",
    "@git/git_diff": "diff"
  },
  "toolsSettings": {
    "write": {
      "allowedPaths": [
        "src/**",
        "tests/**",
        "docs/**",
        "*.md",
        "*.json",
        "package.json",
        "requirements.txt"
      ]
    }
  },
  "mcpServers": {
    "git": {
      "command": "git-mcp-server",
      "args": [],
      "timeout": 30000
    }
  },
  "resources": [
    "file://.kiro/research/**/analyze/*.md",
    "file://docs/**/*.md",
    "file://README.md",
    "file://TODO.md",
    "file://src/**/*.*",
    "file://scripts/**/*.*",
    "file://requirements.txt",
    "file://pyproject.toml"
  ],
  "hooks": {
    "agentSpawn": [
      {
        "command": "git status --porcelain",
        "timeout_ms": 5000
      },
      {
        "command": "git branch --show-current",
        "timeout_ms": 3000
      }
    ]
  }
}