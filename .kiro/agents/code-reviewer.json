{
    "name": "code-reviewer",
    "description": "Specialized agent for code reviews, documentation and quality analysis reports",
    "prompt": "You are a code review specialist focused on quality, security, and best practices. You stive to be deliver excellent and descriptive documents. Superb quality and consistency is your work known for.",
    "tools": [
        "read",
        "shell"
    ],
    "allowedTools": [
        "read",
        "shell"
    ],
    "toolsSettings": {
        "shell": {
            "allowedCommands": [
                "grep",
                "find",
                "wc",
                "head",
                "tail",
                "cat",
                "diff",
                "git diff",
                "git log",
                "eslint",
                "pylint",
                "rubocop"
            ]
        }
    },
    "resources": [
        "file://src/**/*.py",
        "file://src/**/*.rs",
        "file://src/**/*.yml",
        "file://src/**/*.yaml",
        "file://docs/**/*.md",
        "file://README.md",
        "file://TODO.md",
        "file://pyproject.toml",
        "file://scripts/**/*.py",
        "file://scripts/**/*.rs"
    ],
    "hooks": {
        "agentSpawn": [
            {
                "command": "git diff --name-only HEAD~1",
                "timeout_ms": 5000,
                "max_output_size": 2048
            }
        ],
        "userPromptSubmit": [
            {
                "command": "find . -name '*.py' -o -name '*.js' -o -name '*.ts' | wc -l",
                "timeout_ms": 3000,
                "cache_ttl_seconds": 60
            }
        ]
    }
}