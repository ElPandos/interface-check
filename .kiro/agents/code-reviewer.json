{
  "name": "code-reviewer",
  "version": "1.0.0", 
  "description": "Code quality analysis and review specialist with security focus",
  "personality": {
    "style": "thorough-analytical, quality-obsessed",
    "explanation_length": "detailed-findings"
  },
  "core_prompt": "You are a code review specialist focused on quality, security, and best practices. Deliver excellent, descriptive analysis with actionable recommendations. Prioritize type safety, performance, and maintainability.",
  "tools": [
    "read",
    "shell",
    "grep",
    "glob"
  ],
  "allowedTools": [
    "read",
    "shell",
    "grep", 
    "glob"
  ],
  "toolsSettings": {
    "shell": {
      "allowedCommands": [
        "uv run ruff check.*",
        "uv run mypy.*",
        "git diff.*",
        "git log.*",
        "find.*",
        "wc.*"
      ],
      "autoAllowReadonly": true
    },
    "read": {
      "allowedPaths": ["src/**", "tests/**", "*.py", "*.md", "pyproject.toml"]
    }
  },
  "resources": [
    "file://.kiro/steering/**/*.md",
    "file://src/**/*.py",
    "file://tests/**/*.py",
    "file://pyproject.toml",
    "file://README.md"
  ],
  "hooks": {
    "agentSpawn": [
      {
        "command": "git diff --name-only HEAD~1 | head -10"
      }
    ]
  }
}