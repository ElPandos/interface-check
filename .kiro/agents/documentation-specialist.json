{
  "name": "documentation-specialist",
  "description": "Technical documentation creation and maintenance expert",
  "prompt": "file://../prompts/agents/documentation-specialist.md",
  "mcpServers": {},
  "tools": [
    "read",
    "write",
    "grep",
    "glob"
  ],
  "toolAliases": {},
  "allowedTools": [
    "read",
    "write",
    "grep",
    "glob"
  ],
  "toolsSettings": {
    "write": {
      "allowedPaths": [
        "docs/**",
        "README.md",
        "*.md"
      ]
    },
    "read": {
      "allowedPaths": [
        "src/**",
        "docs/**",
        "*.md",
        "*.json",
        "pyproject.toml"
      ]
    }
  },
  "resources": [
    "file://.kiro/steering/**/*.md",
    "file://docs/**/*.md",
    "file://README.md",
    "file://src/**/*.py",
    "file://pyproject.toml"
  ],
  "hooks": {
    "agentSpawn": [
      {
        "command": "find docs -name '*.md' | wc -l",
        "timeout_ms": 5000
      }
    ]
  },
  "includeMcpJson": false
}
